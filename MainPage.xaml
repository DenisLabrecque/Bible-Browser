            <!-- Command Bar -->
            <Grid Height="40"
               VerticalAlignment="Top"
               Background="Transparent">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="90"/>
                </Grid.ColumnDefinitions>

                <!-- Previous and Next buttons -->
                <StackPanel Grid.Column="0"
                        Orientation="Horizontal"
                        Background="{StaticResource AppBarBackgroundThemeBrush}">

                    <!-- Back -->
                    <Button Style="{StaticResource CommandButton}"
                            Name="btnPrevious">
                        <FontIcon FontSize="15" Glyph="&#xE72B;"/>
                    </Button>

                    <!-- Next -->
                    <Button Style="{StaticResource CommandButton}"
                            Name="btnNext"
                            AccessKey="LeftArrow">
                        <FontIcon FontSize="15" Glyph="&#xE72A;"/>
                    </Button>
                </StackPanel>

                <!-- Search -->
                <StackPanel Grid.Column="1"
                            BorderThickness="5"
                            BorderBrush="{StaticResource AppBarBackgroundThemeBrush}">
                    <Grid BorderBrush="Gray"
                          BorderThickness="1"
                          Background="{StaticResource SystemControlBaseMediumLowAcrylicElementMediumBrush}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0"
                            Content="KJV"
                            BorderThickness="0"
                            Background="Transparent"/>

                        <TextBox Grid.Column="1"
                             PlaceholderText="Search"
                             BorderThickness="0"
                             Background="Transparent"
                             Margin="0"
                             VerticalAlignment="Center"
                             Height="26"/>
                    </Grid>
                </StackPanel>


                <!-- Options -->
                <StackPanel Grid.Column="2"
                        Orientation="Horizontal"
                        FlowDirection="RightToLeft"
                        Background="{StaticResource AppBarBackgroundThemeBrush}">

                    <!-- More -->
                    <Button Style="{StaticResource CommandButton}">
                        <FontIcon FontSize="15" Glyph="&#xE712;"/>
                    </Button>

                    <!-- Play (read out loud) -->
                    <Button Name="btnPlay"
                            Style="{StaticResource CommandButton}"
                            AutomationProperties.AcceleratorKey="p"
                            Click="BtnPlay_Click">
                        <FontIcon FontSize="15" Glyph="&#xE768;"/>
                    </Button>
                    <!-- Pause (read out loud) -->
                    <Button Name="btnPause"
                            Style="{StaticResource CommandButton}"
                            Visibility="Collapsed" Click="BtnPause_Click">
                        <FontIcon FontSize="15" Glyph="&#xE769;"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Page>
